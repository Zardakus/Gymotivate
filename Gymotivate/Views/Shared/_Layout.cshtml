            </svg>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gymotivate</a>
        </div>
        <div class="menus">
            <ul class="menu">
                <li class="exerc"><a href="#">Informativos</a></li>
                <ul class="exerc-links" style="display: none;">
                    <!--<li><a href="#">Vídeos</a></li>-->
                    <li> <a asp-area="" asp-controller="Conteudos" asp-action="Index">Conteúdos</a></li>
                </ul>
                <!--<li class="exerc"><a href="#">Academias</a></li>-->
                <li class="exerc-personal"><a href="#">Treino</a></li>
                <ul class="exerc-links-personal" style="display: none;">
                    <li> <a asp-area="" asp-controller="Treinos" asp-action="TipoFicha">Ficha de Treino</a></li>
                    <li> <a asp-area="" asp-controller="Treinos" asp-action="MinhasFichas">Minhas Fichas</a></li>
                </ul>
            </ul>
        </div>
    </nav>
    <div class="main-content">
        <header class="topnav">
            @await Component.InvokeAsync("Menu")
        </header>      
            @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const exercLink = document.querySelector(".exerc a");
            const exercLinks = document.querySelectorAll(".exerc-links");

            // Adicione um ouvinte de evento de clique ao link "Exercícios"
            exercLink.addEventListener("click", function (e) {
                e.preventDefault(); // Impede o comportamento padrão do link

                // Percorre todas as listas de links "Exercícios" e alterna sua exibição
                exercLinks.forEach(function (link) {
                    if (link.style.display === "none" || link.style.display === "") {
                        link.style.display = "block";
                    } else {
                        link.style.display = "none";
                    }
                });
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            const exercLink = document.querySelector(".exerc-personal a");
            const exercLinks = document.querySelectorAll(".exerc-links-personal");

            // Adicione um ouvinte de evento de clique ao link "Exercícios"
            exercLink.addEventListener("click", function (e) {
                e.preventDefault(); // Impede o comportamento padrão do link

                // Percorre todas as listas de links "Exercícios" e alterna sua exibição
                exercLinks.forEach(function (link) {
                    if (link.style.display === "none" || link.style.display === "") {
                        link.style.display = "block";
                    } else {
                        link.style.display = "none";
                    }
                });
            });
        });
    </script>
</body>
</html>
