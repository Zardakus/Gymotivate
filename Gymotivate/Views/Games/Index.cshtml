@{
    ViewData["Title"] = "Quiz";
}

<head>
    <style>

        main {
            justify-content: center;
            align-items: center;
            padding-top: 0px;
        }

        .conquista-titulo {
            display: inline-flex;
            padding: 0px 52px 18px 46px;
            align-items: center;
            border-radius: 0px 0px 15px 15px;
            background: #00282A;
            box-shadow: 0px -2px 6px 0px rgba(72, 211, 78, 0.35) inset, 0px 25px 60px -30px rgba(72, 211, 78, 0.30), 0px 50px 100px -20px rgba(72, 211, 78, 0.25);
        }

            .conquista-titulo p {
                color: #006330;
                font-family: Karla;
                font-size: 36px;
                font-style: normal;
                font-weight: 700;
                line-height: normal;
            }

        .conquista-direita svg {
            display: flex;
            width: 100%;
            height: 100%;
            vertical-align: middle;
            align-items: center;
            justify-content: center;
        }

        .container-svg {
            display: grid;
            grid-template-columns: repeat(2, 1fr); /* Cria duas colunas igualmente espaçadas */
            gap: 20px; /* Define a distância mínima entre os elementos */
        }

        .circulo-svg-1,
        .circulo-svg-2 {
            padding: 50px; /* Ajuste o padding conforme necessário */
        }

        .charts {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: var(--default-pad);
            justify-items: end;
        }

    </style>
</head>

<body>
    <main role="main">
        <div class="conquista-titulo">
            <p>Quiz</p>
        </div>
        <div class="charts">
            <article class="chart divgames">
                <img width="64" height="64" src="https://img.icons8.com/external-microdots-premium-microdot-graphic/64/000000/external-chest-sport-fitness-vol4-microdots-premium-microdot-graphic.png" alt="external-chest-sport-fitness-vol4-microdots-premium-microdot-graphic" />
                <li class="games"><a asp-area="" asp-controller="Games" asp-action="Perguntas" asp-route-botao="peitos">Peitos</a></li>
            </article>

            <article class="chart divgames">
                <img width="64" height="64" src="https://img.icons8.com/external-microdots-premium-microdot-graphic/64/external-back-sport-fitness-vol4-microdots-premium-microdot-graphic.png" alt="external-back-sport-fitness-vol4-microdots-premium-microdot-graphic" />
                <li class="games"><a asp-area="" asp-controller="Games" asp-action="Perguntas" asp-route-botao="costas">Costas</a></li>
            </article>

            <article class="chart divgames">
                <img width="64" height="64" src="https://img.icons8.com/external-microdots-premium-microdot-graphic/64/external-exercise-sport-fitness-vol4-microdots-premium-microdot-graphic.png" alt="external-exercise-sport-fitness-vol4-microdots-premium-microdot-graphic" />
                <li class="games"><a asp-area="" asp-controller="Games" asp-action="Perguntas" asp-route-botao="pernas">Pernas</a></li>
            </article>

            <article class="chart divgames">
                <img width="64" height="64" src="https://img.icons8.com/external-microdots-premium-microdot-graphic/64/external-biceps-sport-fitness-vol4-microdots-premium-microdot-graphic.png" alt="external-biceps-sport-fitness-vol4-microdots-premium-microdot-graphic" />
                <li class="games"><a asp-area="" asp-controller="Games" asp-action="Perguntas" asp-route-botao="bracos">Braços</a></li>
            </article>
        </div>
    </main>
</body>

