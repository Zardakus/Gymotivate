@model List<Gymotivate.Models.RankModel>

@{
    ViewData["Title"] = "Rank";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ranking de Usuários</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        main {
                justify-content: center;
        align-items: center;
        padding-top: 0px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th, td {
            border-bottom: 1px solid #017439;;
        }

        tr:last-child td {
            border-bottom: none;
        }

        .conquista-titulo {
            display: inline-flex;
            padding: 0px 52px 18px 46px;
            align-items: center;
            border-radius: 0px 0px 15px 15px;
            background: #00282A;
            box-shadow: 0px -2px 6px 0px rgba(72, 211, 78, 0.35) inset, 0px 25px 60px -30px rgba(72, 211, 78, 0.30), 0px 50px 100px -20px rgba(72, 211, 78, 0.25);
        }

            .conquista-titulo p {
                color: #006330;
                font-family: Karla;
                font-size: 36px;
                font-style: normal;
                font-weight: 700;
                line-height: normal;
            }

        .topo{
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 0px;
        }

        th {
            color: #006330;           
        }

        td {
            color: #48D34E;
        }
        
        tr {
            color: #017439;
        }

        .container {
            background-color: #1A1C1A;
            border-radius: 10px;
            box-shadow: 0px 0px 0px 1px rgba(255, 255, 255, 0.00) inset, 0px 2px 8px 0px #000, 0px 1px 1px 0px #000;
            padding: 20px;
            text-align: center;
            margin: 20px;
        }

    </style>
</head>
<body>
    <main>
        <div class="topo conquista-titulo">
            <p class="">Ranking de Usuários</p>
        </div>
        <table class="container">
            <tr>
                <th>Nome do Usuário</th>
                <th>Quantidade de Acertos</th>
                <th>Quantidade de Conquistas</th>
                <th>Quantidade de Exp</th>
            </tr>
            
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.HighestScore</td>
                    <td>@user.Conquistas</td>
                    <td>@user.TotalExp</td>
                </tr>
            }
        </table>
    </main>    
    <script>

    </script>
</body>
</html>
