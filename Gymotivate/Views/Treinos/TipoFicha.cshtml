@{
    ViewData["Title"] = "Modelo Fichas";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monte sua Ficha de Treino</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="conquista-titulo">
        <p>Modelo Ficha de Treino</p>
    </div>

    <div class="opcoes">
        <article class="chart divgames">
            <li class="games"><a asp-area="" asp-controller="Treinos" asp-action="FichaPadrao">Ficha Iniciantes</a></li>
        </article>

        <article class="chart divgames">
            <li class="games"><a href="javascript:void(0);" onclick="showCustomNotification()">Ficha Personalizada</a></li>
        </article>
    </div>

    <!-- Elemento semitransparente que cobre a tela -->
    <div id="overlay" class="overlay"></div>

    <!-- Custom notification -->
    <div id="custom-notification" class="notification">
        <div class="notification-content">
            <p>Utilize essa opção apenas se tiver o conhecimento adequado para montar um ficha de treino sozinho!</p>
            <button onclick="confirmNavigation()">Eu tenho</button>
            <button onclick="hideCustomNotification()">Voltar</button>
        </div>
    </div>

    <!-- Adicione o script no final da sua view -->
    <script>
        function showCustomNotification() {
            var customNotification = document.getElementById("custom-notification");
            var overlay = document.getElementById("overlay");

            customNotification.style.display = "block";
            overlay.style.display = "block";
        }

        function hideCustomNotification() {
            var customNotification = document.getElementById("custom-notification");
            var overlay = document.getElementById("overlay");

            customNotification.style.display = "none";
            overlay.style.display = "none";
        }

        function confirmNavigation() {
            // Redirecione para a página desejada
            window.location.href = "@Url.Action("Index", "Treinos")";
        }
    </script>
</body>
</html>

<style>
    body {
        font-family: Arial, sans-serif;
        text-align: center;
    }

    .conquista-titulo {
        display: inline-flex;
        padding: 0px 52px 18px 46px;
        align-items: center;
        border-radius: 0px 0px 15px 15px;
        background: #00282A;
        box-shadow: 0px -2px 6px 0px rgba(72, 211, 78, 0.35) inset, 0px 25px 60px -30px rgba(72, 211, 78, 0.30), 0px 50px 100px -20px rgba(72, 211, 78, 0.25);
    }

        .conquista-titulo p {
            color: #006330;
            font-family: Karla;
            font-size: 36px;
            font-style: normal;
            font-weight: 700;
            line-height: normal;
        }

    li {
        list-style: none;
    }

    .opcoes {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        margin-left:50px;
        margin-top: 40px;
    }

    .divgames {
        background: var(--dark);
        max-width: 520px;
        min-width: 382px;
        height: 166px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 30px;
        box-shadow: 0px -2px 6px 0px rgba(72, 211, 78, 0.35) inset;
        filter: drop-shadow(0px 25px 60px rgba(72, 211, 78, 0.30)) drop-shadow(0px 50px 100px rgba(72, 211, 78, 0.25));
    }

        .opcoes article {
            margin-bottom: 20px;
        }

    /* Estilize o overlay semitransparente */
    .overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    /* Estilize a notificação personalizada */
    .notification {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #1A1C1A;
        box-shadow: 0px -2px 6px 0px rgba(72, 211, 78, 0.35) inset, 0px 25px 60px -30px rgba(72, 211, 78, 0.30), 0px 50px 100px -20px rgba(72, 211, 78, 0.25);
        padding: 20px;
        border-radius: 10px;
        z-index: 1000;
        margin-left: 85px;
    }

    .notification-content {
        text-align: center;
    }

        .notification-content p {
            color: #48D34E;
        }

    .notification button {
        margin: 10px;
        padding: 10px 20px;
        background: #48D34E;
        color: black;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>
